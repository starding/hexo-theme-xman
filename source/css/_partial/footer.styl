#page-footer
  margin-top auto

#footer-wrapper
  display flex
  justify-content center
  margin-top 1em
  background color-footer
  padding 0 2.5%

#footer
  display flex
  flex-direction column
  flex-grow 1
  @media mini
    max-width 1200px 

.author-area-container
  display flex
  flex-direction column
  @media mini
    flex-direction row
    justify-content space-between
.author-area
  display: flex
  flex-direction: column
  @media mini
    flex-direction: row
    align-content: center
  .line
    display flex
    flex-direction column
    align-items center
    span
      display block
      width 0.5em
      height 4.25em
      border-right 0.125em solid color-white
  .author
    width w=(110/16)em
    height w
    background no-repeat url("../"+author-img) left top 
    background-size w w
    border-radius (w/2)
    transition transform 2s ease-out
    &:hover
      transform rotateZ(360deg)
  .info
    display flex
    justify-content center
    align-items center
    font-family font-default
    line-height 1.6
    font-size font-size
    color color-white
    p
      padding 1em
      @media phone
        text-align center
      @media mini
        padding-top 4em
        text-align left

.social-font
  display flex
  justify-content center
  align-items center
  @media mini
    padding-top 3em
  a
    display block
    text-align: center
    color color-white
    font-size font-size+85
    padding 0.5em
    &:hover:before
      color color-blue

.copyright
  padding 2em
  font-family font-default
  font-size 0.6em
  color color-white
  text-align center
  a
    color color-blue
    &:hover
      color color-blue
      text-decoration underline

.cc-license
  width 100%
  float left
  text-align center
  .cc-opacity 
    opacity 0.7
    border-bottom none
    &:hover
      opacity 0.9
  img
    display inline-block
